<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Add Category</h4>
                </div>
                <div class="card-body">
                    {{#if status}}
                    <p class="pl-1">{{status}}</p>
                    {{else}}
                    <p class="pt-3">{{status}}</p>
                    {{/if}}
                    <form action="/admin/add-category" method="POST" id="category">
                        <div class="form-group d-inline-flex ">
                            <input type="text" class="form-control" name="categories" id="" aria-describedby="emailHelp"
                                placeholder="Category Name" style=" height:40px">
                            <span id="error"></span>

                        </div>
                        <div class="form-group d-flex justify-content-center ">
                            <div class="pl-5 text-rignt ">
                                <button type="submit" class="btn btn-primary mt-0">Submit</button>
                            </div>
                            <div class="pl-2 pt-0 text-right">
                                <a href="/admin/category" class=" btn btn-primary mt-0"> Back </a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#category").validate({
            rules: {
                categories: {
                    required: true,
                    minlength: 5
                }
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        })
    })
</script>