<!-- product_list start-->
<section class="feature_part section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section_tittle text-center">
                    <h2>Top Products</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{!-- product carousal point--}}
                <div class="single_product_list_slider" data-aos="fade-up">
                    <div class="row align-items-center justify-content-between">
                        {{#each products}}
                        <div class="col-lg-3 col-sm-6">
                            <div class="single_product_item">
                                <a href="/product-details/?id={{this._id}}">
                                    <img src="product-images/{{this._id}}_image1.jpeg" alt="">
                                </a>
                                <div class="single_product_text ">
                                    <h4>{{this.productname}}</h4>
                                    {{#if this.discountPrice}}
                                    <div class="d-inline-flex inline">
                                    <h3 class="">Rs.<strike>{{this.actualPrice}}</strike>  {{this.discountPrice}}</h3> <img src="/img/discount.svg" alt="" class="ml-2" width="19px" height="19px"> 
                                    </div>
                                    {{else}}
                                    <h3>Rs. {{this.actualPrice}}</h3>
                                    {{/if}}
                                    <div class="">
                                        <button onclick="addToCart('{{this._id}}')" class="btn m-0 p-0 btn_4 add_cart">Add to cart <i
                                                class=""></i></button>
                                    </div>
                                    <input type="hidden" id="quantity" >
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
