<!--================Cart Area =================-->
<section class="cart_area padding_top">
  {{#if orders}}
  <div class="container">
    <div class="cart_inner">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Product</th>
              <th scope="col">Total</th>
              {{!-- <th scope="col">Re-Order</th> --}}
              <th scope="col">More Details</th>
              <th scope="col">Cancel</th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
            <tr>
              <td>
                <div class="d-flex">
                  <p>{{inc @index}}</p>
                </div>
              </td>
              <td>
                <div class="media">

                  <div class="media-body">
                    <p>Order ID:{{this._id}}</p>
                    {{!-- <p>Order Status:{{this.orderStatus}}</p> --}}
                    <p>Order Date:{{this.date}}</p>
                  </div>
                </div>
              </td>
              <td>
                <h5>Rs.{{this.total}}</h5>
              </td>
              {{#if this.cancel}}
              <td>
       
              </td>
              <td>
              
              </td>
              <td>

              </td>
              {{else}}
              {{!-- <td> --}}
                {{!-- <a href="/checkout" class="genric-btn success-border">Repeat</a> --}}
              {{!-- </td> --}}
              <td>
                <a href="/order-details/{{this._id}}" class="genric-btn info-border"> Details</a>
              </td>
              <td>
                <a href="/cancel-order/{{this._id}}" onclick="return confirm('Are you sure to delete?')"
                  class="genric-btn danger-border">Cancel</a>
              </td>
              {{/if}}
            </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="checkout_btn_inner float-right">
          <a class="btn_1" href="/all-products">Continue Shopping</a>
        </div>
      </div>
    </div>
    {{else}}
    <div class="container ">
      <div class="cart_inner ">
        <div class="breadcrumb_iner_item" style="justify-content: center;">
        
            <div class="d-flex justify-content-center">
            <h2 class="">Your don't have any orders yet.</h2>
            </div>
        
        </div>
        <div class="checkout_btn_inner float-right mt-5">
          <a class="btn_1" href="/all-products">Continue Shopping</a>
        </div>
      </div>
    </div>
    {{/if}}
</section>