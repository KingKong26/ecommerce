<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" style="display: inline-block;"> Customers</h4>
                    {{#if customers}}
                    <button type="button" class="btn btn-sm btn-warning mt-3" id="customersPDF"
                        style="display: inline-block;float:right;">Export PDF</button>
                    {{else}}
                    <button type="button" class="btn btn-sm btn-warning mt-3" id="customersPDF"
                        style="display: inline-block;float:right;" disabled>Export PDF</button>
                    {{/if}}
                    
                </div>
                <div>
                    <p></p>
                </div>
                <div class="card-body" id="">
                    <div class="table-responsive" >
                        <table class="table" id="customersTable">
                            <thead class=" text-primary">
                                <th>
                                    #
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th >
                                    Phone
                                </th>
                            </thead>
                            <tbody>
                                {{#each customers}}
                                <tr>
                                    <td>
                                        {{inc @index}}
                                    </td>
                                    <td>
                                        <p class="m-0 text-info ">{{this.user.firstname}} {{this.user.lastname}}</p>
                                    </td>
                                    <td>
                                        <p class="m-0 text-info ">{{this.user.email}}</p>
                                    </td>
                                    <td class="" style="">
                                        <p class="m-0 text-info" id="shipped">{{this.user.phone}}</p>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>